.preview-image-boxes {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    float: left;
    margin: 0 20px 20px 0;
    max-width: calc(50% - 20px);
    /* clear: both */
}

.preview-image-fullwidth-boxes {
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    float: left;
    margin: 0 0 40px 40px;
    width: 100%;
    clear: both
}

.preview-image-box {
    width: 100%;
    float: left
}

.preview-image-box img {
    cursor: pointer;
    max-width: 100%;
    -webkit-transition: all .3s;
    transition: all .3s;
    background: #fff;
    padding: 0px;
    border-radius: 4px
}

.preview-image-box img:hover {
    -webkit-box-shadow: 1px 1px 6px rgba(0,0,0,0.3);
    box-shadow: 1px 1px 6px rgba(0,0,0,0.3)
}

.preview-image-wrapper {
    background: #f2f4f5;
    padding: 15px;
    display: inline-block;
    text-align: center;
    width: 100%;
    position: relative
}

.preview-image-wrapper.good:after {
    content: '';
    width: 100%;
    height: 3px;
    background: #1890ff;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0
}

.preview-image-wrapper.bad:after {
    content: '';
    width: 100%;
    height: 3px;
    background: #f5222d;
    display: block;
    position: absolute;
    bottom: 0;
    left: 0
}

.preview-image-title {
    font-size: 12px;
    margin-top: 5px;
    color: #314659
}

.preview-image-description {
    font-size: 12px;
    margin-top: 2px;
    color: #697b8c;
    line-height: 1.5
}




.uikit-cards
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-flex-flow: wrap;
  -ms-flex-flow: wrap;
  flex-flow: wrap;
  width: 100%;
  .uikit-card
    display: -webkit-box;
    display: -webkit-flex;
    display: -ms-flexbox;
    display: flex;
    max-width: 500px;
    width: calc(50% - 20px);
    min-width: 370px;
    height: 150px;
    border: 1px solid #d9d9d9;
    border-radius: 4px;
    font-size: 12px;
    color: #777;
    margin: 0 20px 20px 0;
    vertical-align: middle;
    -webkit-transition: all .3s ease;
    transition: all .3s ease;
    position: relative;
    overflow: hidden;
    min-height: 80px
    &:hover
      -webkit-box-shadow: 0 10px 30px #d3ddeb;
      box-shadow: 0 10px 30px #d3ddeb;
      border: 1px solid #d9d9d9;
    &:nth-of-type(even)
      margin: 0 0px 20px 0;
    .uikite-icon
      display: flex;
      -webkit-box-align: center;
      align-items: center;
      justify-content: center;
      width: 100px;
      margin-right:20px;
    .uikite-content
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-orient: vertical;
      -webkit-box-direction: normal;
      -webkit-flex-flow: column;
      -ms-flex-flow: column;
      flex-flow: column;
      -webkit-box-pack: center;
      -webkit-justify-content: center;
      -ms-flex-pack: center;
      justify-content: center;
    .uikite-card-title
      display: block;
      font-size: 16px;
      color: #314659;
      overflow: hidden;
      white-space: nowrap;
      text-overflow: ellipsis;
      line-height: 1.2;
      margin-bottom: 6px;
    .uikite-card-description
      display: block;
      color: #697b8c;
      padding-right: 16px;

